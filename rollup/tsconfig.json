{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": [
            "ES6",
            "DOM"
        ],
        "esModuleInterop": true,
        "outDir": "dist/tsc",
        "rootDir": "./",
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "include": [
        "src",
        "./rollup.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist/tsc/**/*"
    ]
}